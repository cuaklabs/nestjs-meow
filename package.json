{
  "name": "root",
  "private": true,
  "description": "Meow meow meow",
  "main": "index.js",
  "scripts": {
    "build:dev": "tsc --build tsconfig.dev.json",
    "build:prod": "tsc --build tsconfig.prod.json",
    "build:prod:clean": "tsc --build tsconfig.prod.json --clean",
    "build:test": "tsc --build tsconfig.test.json",
    "build:test:clean": "tsc --build tsconfig.test.json --clean",
    "build": "tsc",
    "format": "prettier --write ./packages",
    "lint": "eslint --ext ts --ignore-path .gitignore .",
    "prebuild": "rimraf node_modules/@cuaklabs",
    "prebuild:prod": "npm run build:prod:clean",
    "prebuild:test": "npm run build:test:clean",
    "prepare": "husky install",
    "prepublish:packages": "npm run build:prod && npm t",
    "publish:packages": "lerna publish from-package",
    "test:coverage": "npm test -- --coverage",
    "test:integration": "jest --config=config/jest/jest.config.js --selectProjects Integration",
    "test:integration:js": "jest --config=config/jest/jest.js.config.js --selectProjects Integration",
    "test:master": "jest --config=config/jest/jest.config.js --changedSince=origin/master",
    "test:js:ci": "npm run test:js -- --ci",
    "test:js:coverage": "npm run test:js -- --coverage",
    "test:js:ci:coverage": "npm run test:js -- --ci --coverage",
    "test:js": "jest --config=config/jest/jest.js.config.js --selectProjects Unit Integration",
    "test:package:nestjs-firebase-admin": "jest --selectProjects FirebaseAdmin-Integration FirebaseAdmin-Unit",
    "test:package:nestjs-firebase-admin:js": "jest --config=config/jest/jest.js.config.js --selectProjects FirebaseAdmin-Integration FirebaseAdmin-Unit",
    "test:previous": "jest --config=config/jest/jest.config.js --changedSince=HEAD~1",
    "test:unit": "jest --config=config/jest/jest.config.js --selectProjects Unit",
    "test:unit:js": "jest --config=config/jest/jest.js.config.js --selectProjects Unit",
    "test": "jest --config=config/jest/jest.config.js --selectProjects Unit Integration"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuaklabs/nestjs-meow.git"
  },
  "author": "Cuak McCuackl <cuak.mccuakl@cuaklabs.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cuaklabs/nestjs-meow/issues"
  },
  "homepage": "https://github.com/cuaklabs/nestjs-meow#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "enhanced-resolve": "^5.8.3",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "~4.5.4"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^8.2.0",
    "firebase-admin": "^10.0.1"
  }
}
